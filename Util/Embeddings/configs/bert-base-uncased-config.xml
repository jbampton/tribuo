<!--OLCUT configuration file-->
<config>
  <component name="bert-base-uncased" type="org.tribuo.util.embeddings.OnnxFeatureExtractor">
    <property name="intraOpThreads" value="0"/>
    <property name="interOpThreads" value="0"/>
    <property name="useCUDA" value="false"/>
    <property name="modelPath" value="bert-base-uncased-onnx/model.onnx"/>
    <property name="inputProcessor" value="bert-input"/>
    <property name="outputProcessor" value="bert-output"/>
  </component>

  <component name="bert-input" type="org.tribuo.util.embeddings.processors.BERTInputProcessor">
    <property name="tokenizerPath" value="bert-base-uncased-onnx/tokenizer.json"/>
    <property name="maxLength" value="512"/>
  </component>

  <component name="bert-output" type="org.tribuo.util.embeddings.processors.BERTOutputProcessor">
    <property name="embeddingDimension" value="768"/>
    <property name="pooling" value="MEAN"/>
    <property name="useAllTokens" value="true"/>
    <property name="normalize" value="true"/>
  </component>
</config>